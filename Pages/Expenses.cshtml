@page
@model ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<h1>Expenses</h1>

<form method="post">
    <input asp-for="NewExpense.Title" placeholder="Title" />
    <input asp-for="NewExpense.Category" placeholder="Category" />
    <input asp-for="NewExpense.Amount" placeholder="Amount" type="number" step="0.01" />
    <input asp-for="NewExpense.Date" type="date" />
    <button type="submit">Add Expense</button>
</form>

<hr />

<table>
    <thead>
        <tr><th>Title</th><th>Category</th><th>Amount</th><th>Date</th></tr>
    </thead>
    <tbody>
        @foreach (var expense in Model.Expenses)
        {
            <tr>
                <td>@expense.Title</td>
                <td>@expense.Category</td>
                <td>@expense.Amount</td>
                <td>@expense.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
